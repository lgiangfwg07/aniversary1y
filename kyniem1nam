    <!-- Modal -->
    <div id="questionModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <p id="questionText"></p>
            <input type="text" id="answerInput" placeholder="Nh·∫≠p ƒë√°p √°n c·ªßa b·∫°n...">
            <button id="submitAnswer">G·ª≠i</button>
            <p id="errorMessage">Sai r·ªìi, h√£y th·ª≠ l·∫°i!</p>
        </div>
    </div>

    <!-- N√∫t cu·ªôn l√™n v√† cu·ªôn xu·ªëng -->
    <button id="scrollToTop" title="L√™n ƒë·∫ßu trang">‚Üë</button>
    <button id="scrollToBottom" title="Xu·ªëng cu·ªëi trang">‚Üì</button>

    <script>
        const modal = document.getElementById('questionModal');
        const questionText = document.getElementById('questionText');
        const answerInput = document.getElementById('answerInput');
        const submitAnswer = document.getElementById('submitAnswer');
        const errorMessage = document.getElementById('errorMessage');
        const closeModal = document.querySelector('.close');

        let currentLetter = null;

        // M·ªü modal khi nh·∫•p v√†o th∆∞
        document.querySelectorAll('.letter').forEach(letter => {
            letter.addEventListener('click', () => {
                if (letter.classList.contains('opened')) {
                    letter.classList.remove('opened');
                    return;
                }

                const question = letter.getAttribute('data-question');
                const answer = letter.getAttribute('data-answer');

                if (answer === "any") {
                    letter.classList.add('opened');
                    return;
                }

                currentLetter = letter;
                questionText.textContent = question;
                modal.style.display = 'flex';
                errorMessage.style.display = 'none';
                answerInput.value = '';
            });
        });

        // ƒê√≥ng modal
        closeModal.addEventListener('click', () => {
            modal.style.display = 'none';
        });

        // X·ª≠ l√Ω khi nh·∫•n n√∫t G·ª≠i
        submitAnswer.addEventListener('click', () => {
            const userAnswer = answerInput.value.trim();
            const correctAnswer = currentLetter.getAttribute('data-answer');

            if (correctAnswer === "any" || userAnswer === correctAnswer) {
                currentLetter.classList.add('opened');
                modal.style.display = 'none';
            } else {
                errorMessage.style.display = 'block';
            }
        });

        // T·∫°o hi·ªáu ·ª©ng tr√°i tim bay
        const heartsBackground = document.getElementById('hearts-background');
        function createHeart() {
            const heart = document.createElement('div');
            heart.classList.add('heart');
            heart.style.left = Math.random() * 100 + 'vw';
            heart.style.animationDuration = Math.random() * 3 + 2 + 's';
            heartsBackground.appendChild(heart);

            // X√≥a tr√°i tim sau khi bay xong
            setTimeout(() => {
                heart.remove();
            }, 5000);
        }

        // T·∫°o tr√°i tim li√™n t·ª•c
        setInterval(createHeart, 300);

        // X·ª≠ l√Ω n√∫t cu·ªôn l√™n
        const scrollToTopBtn = document.getElementById('scrollToTop');
        scrollToTopBtn.addEventListener('click', () => {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });

        // X·ª≠ l√Ω n√∫t cu·ªôn xu·ªëng
        const scrollToBottomBtn = document.getElementById('scrollToBottom');
        scrollToBottomBtn.addEventListener('click', () => {
            window.scrollTo({
                top: document.body.scrollHeight,
                behavior: 'smooth'
            });
        });

        // Cu·ªôn m∆∞·ª£t b·∫±ng chu·ªôt
        const scrollSpeed = 100;
        window.addEventListener("wheel", (event) => {
            event.preventDefault(); // NgƒÉn h√†nh vi cu·ªôn m·∫∑c ƒë·ªãnh
            const delta = event.deltaY; // L·∫•y h∆∞·ªõng cu·ªôn (l√™n ho·∫∑c xu·ªëng)
            window.scrollBy({
                top: delta * (scrollSpeed / 100), // TƒÉng/gi·∫£m t·ªëc ƒë·ªô cu·ªôn
                behavior: "smooth" // Cu·ªôn m∆∞·ª£t
            });
        });
    </script>
    <div class="music-player">
        <iframe width="1000" height="700" src="https://www.youtube.com/embed/PNhYz6RmIr4?autoplay=1&loop=1&playlist=PNhYz6RmIr4"></iframe>
